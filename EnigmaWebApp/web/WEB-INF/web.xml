<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoadGameSettingsServlet</servlet-name>
        <servlet-class>server.servlets.LoadGameSettingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameListServlet</servlet-name>
        <servlet-class>server.servlets.GameListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewGameServlet</servlet-name>
        <servlet-class>server.servlets.NewGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>server.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AliesListServlet</servlet-name>
        <servlet-class>server.servlets.AliesListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadGameSettingsServlet</servlet-name>
        <url-pattern>/pages/games/load</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewGameServlet</servlet-name>
        <url-pattern>/pages/games/newgame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/signup/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AliesListServlet</servlet-name>
        <url-pattern>/pages/alieslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameListServlet</servlet-name>
        <url-pattern>/gameslist</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
