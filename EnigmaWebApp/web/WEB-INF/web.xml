<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>ReadyServlet</servlet-name>
        <servlet-class>server.servlets.ReadyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgentCandidatesServlet</servlet-name>
        <servlet-class>server.servlets.AgentCandidatesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidatesListServlet</servlet-name>
        <servlet-class>server.servlets.CandidatesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadGameSettingsServlet</servlet-name>
        <servlet-class>server.servlets.LoadGameSettingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AliesReadyServlet</servlet-name>
        <servlet-class>server.servlets.AliesReadyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinGameServlet</servlet-name>
        <servlet-class>server.servlets.JoinGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveGameServlet</servlet-name>
        <servlet-class>server.servlets.LeaveGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetGameServlet</servlet-name>
        <servlet-class>server.servlets.ResetGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameListServlet</servlet-name>
        <servlet-class>server.servlets.GameListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgentDetailsServlet</servlet-name>
        <servlet-class>server.servlets.AgentDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewGameServlet</servlet-name>
        <servlet-class>server.servlets.NewGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>server.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>server.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AliesListServlet</servlet-name>
        <servlet-class>server.servlets.AliesListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadyServlet</servlet-name>
        <url-pattern>/pages/games/ready</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgentCandidatesServlet</servlet-name>
        <url-pattern>/pages/games/aliescandidateslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CandidatesListServlet</servlet-name>
        <url-pattern>/pages/games/uboatcandidateslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AliesReadyServlet</servlet-name>
        <url-pattern>/pages/games/aliesready</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadGameSettingsServlet</servlet-name>
        <url-pattern>/pages/games/load</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinGameServlet</servlet-name>
        <url-pattern>/pages/games/joingame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetGameServlet</servlet-name>
        <url-pattern>/pages/games/resetgame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveGameServlet</servlet-name>
        <url-pattern>/pages/games/leavegame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewGameServlet</servlet-name>
        <url-pattern>/pages/games/newgame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/signup/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/pages/games/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AliesListServlet</servlet-name>
        <url-pattern>/pages/games/alieslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameListServlet</servlet-name>
        <url-pattern>/pages/games/gamelist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgentDetailsServlet</servlet-name>
        <url-pattern>/pages/games/agentDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
